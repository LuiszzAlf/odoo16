<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_control_periodos_wizard" model="ir.ui.view">
        <field name="name">control.periodos.wizard.form</field>
        <field name="model">control.periodos.wizard</field>
        <field name="arch" type="xml">
        <form>
        <h1>
            <field name="tipo_up" class="oe_inline"/>
        </h1>
            <group>
                <group>
                   <field name="periodo"/>
                    <field name="ejercicio"/>
                    <field name="version"/>
                </group>
                <group>
                   <field name="partida_presupuestal"  attrs="{'invisible': [('tipo_up', '=', 1)]}" string="Posicion Presupuestaria"/>
                </group>
                <group string="">
                </group>
                <group string="Opciones">
                    <h2><field name="status" string="Estatus a cambiar"/></h2>
                </group>
            </group>
            <footer>
              <div attrs="{'invisible': [('tipo_up', '!=', 1)]}">
                <button name="search_periodo" string="Guardar cambios" type="object" default_focus="1" class="oe_highlight"/>
                or
                <button string="Cancelar" class="oe_link" special="cancel" />
              </div>
              <div attrs="{'invisible': [('tipo_up', '=', 1)]}">
                <button name="search_periodo_partida" string="Guardar cambio" type="object" default_focus="1" class="oe_highlight"/>
                or
                <button string="Cancelar" class="oe_link" special="cancel" />
              </div>
            </footer>

        </form>
        </field>
    </record>
</odoo>
