<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_axuliares_wizard" model="ir.ui.view">
        <field name="name">axuliares.wizard.form</field>
        <field name="model">axuliares.wizard</field>
        <field name="arch" type="xml">
        <form edit="false" create="false">
          <notebook>
            <page string="Por cuenta">
              <group col="4">
                <field name="cuenta_inicio" string="De cuenta"/>
                <field name="cuenta_fin" string="a"/>
                <field name="fecha_inicio" string="De fecha"/>
                <field name="fecha_fin" string="a"/>
              </group>
              <group col="4">
                <button id="search_button" name="search_pc_button" string="Generar Excel" icon="fa-search" type="action"/>
              </group>
              <page string="Resultados">
              <div style="display:none;" id="csv_url_div"><field name="csv_urls"/></div>
              <a style="display:none;" class="btn btn-default"  id="csv_download2" href="#" target="_blank" download="file.xls">Descargar XLS2</a>
                <script>
                  $(document).ready(function(){
                    var csv_url = $("#csv_url_div").text();
                    $("#csv_download").attr("href", csv_url);
                    $( "#csv_download" ).click(function() {
                        var csv_url = $("#csv_url_div").text();
                        $("#csv_download2").attr("href", csv_url);
                        $("#csv_download2").attr("download", "auxiliares.xls");
                        $("#csv_download2")[0].click();
                        return false;
                    });
                });
              </script> 
                 <field name="result_pc_html" widget="html"/>
              </page>
            </page>
            <page string="Rango de cuentas">
              <page string="Resultados">
              </page>
            </page>
            <page string="Opciones">
            </page>
          </notebook>
          <footer>
          <div >
          <button name="pdf_aux_pc" string="PDF" icon="fa-file" type="object" groups="base.group_user"/>
          o
          <a class="btn btn-success" icon="fa-file" id="csv_download"   attrs="{'invisible':[('csv_urls','=','')]}">
            <div class="fa fa-fw fa-file-excel-o o_button_icon"></div>Descargar Excel</a>

          <button string="Cancelar" class="btn btn-primary" style="background-color: #d13c3c; border-color:#d13c3c;" special="cancel" />
          </div>
          </footer>
        </form>
        </field>
    </record>
</odoo>
