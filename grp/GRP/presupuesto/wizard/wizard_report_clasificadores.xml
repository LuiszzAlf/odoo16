<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="wizard_reportes_clasificadores_form" model="ir.ui.view">
			<field name="name">Reportes conac</field>
			<field name="model">tjacdmx.wizard_reportes_financieros_clasificador</field>
			<field name="arch" type="xml">
				<form string="Reportes Estado de Actividades">
					<div class="oe_title">
						<h4>Elige un reporte, periodo y año fiscal</h4>
					</div>
					<group name="group_top">
						<group name="group_right">
                            <field name="reporte_select" string="Reporte" />
                            <field name="anio_fiscal" string="Año Fiscal" />
						</group>
					</group>
					<footer>
						<button name="action_reportes_financieros_clasi" string="Generar" class="oe_highlight" type="object"/>
						<span class="or_cancel"> o
							<button special="cancel" string="Cancelar" type="object" class="oe_linl_oe_inline" />
						</span>
					</footer>
				</form>
			</field>
		</record>
		<record id="action_wizard_reportes_financieros_clasificadores" model="ir.actions.act_window">
			<field name="name">Reportes Financieros clasificadores</field>
			<field name="res_model">tjacdmx.wizard_reportes_financieros_clasificador</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_reportes_clasificadores_form" />
			<field name="target">new</field>
		</record>
		<menuitem 
		id="menu_wizard_reportes_financieros_clasificador"
		name="Reportes financieros Clasificador"
		sequence="20"
		action="action_wizard_reportes_financieros_clasificadores"
		parent="presupuestos.presupuestos_reportes_informes_pdf"
		/>
	</data>
</odoo>