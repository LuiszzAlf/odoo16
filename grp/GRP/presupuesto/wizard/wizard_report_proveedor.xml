<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_report_proveedor_form" model="ir.ui.view">
            <field name="name">Reporte de proveedor</field>
            <field name="model">tjacdmx_report_proveedor</field>
            <field name="arch" type="xml">
                <form string="Reporte de proveedor">
                    <div class="oe_title">
                        <h4>Elige un proveedor</h4>
                    </div>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="proveedor" string="Proveedor" />
                            <field name="fecha_inicio" string="De fecha"/>
                            <field name="fecha_fin" string="a"/>
                        </group>
                    </group>
                    <group col="4">
                        <button id="search_button" name="search_pc_button" string="Generar Excel" icon="fa-search" type="action"/>
                    </group>
                    <notebook>
                        <page string="Auxiliar">
                            <page string="Resultados">
                                <div style="display:none;" id="csv_url_div">
                                    <field name="csv_urls"/>
                                </div>
                                <a style="display:none;" class="btn btn-default"  id="csv_download2" href="#" target="_blank" download="file.xls">Descargar XLS2</a>
                                <script>
							  $(document).ready(function(){
								var csv_url = $("#csv_url_div").text();
								$("#csv_download").attr("href", csv_url);
								$( "#csv_download" ).click(function() {
									var csv_url = $("#csv_url_div").text();
									$("#csv_download2").attr("href", csv_url);
									$("#csv_download2").attr("download", "auxiliares.xls");
									$("#csv_download2")[0].click();
									return false;
								});
							});
						  </script>
                                <field name="result_pc_html" widget="html"/>
                            </page>
                        </page>
                    </notebook>
                    <footer>
                        <div >
                            <button name="pdf_aux_pc" string="PDF" icon="fa-file" type="object" groups="base.group_user"/>
					  o
					  
                            <a class="btn btn-success" icon="fa-file" id="csv_download"   attrs="{'invisible':[('csv_urls','=','')]}">
                                <div class="fa fa-fw fa-file-excel-o o_button_icon"></div>Descargar Excel
                            </a>
                            <button string="Cancelar" class="btn btn-primary" style="background-color: #d13c3c; border-color:#d13c3c;" special="cancel" />
                        </div>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_wizard_report_proveedor" model="ir.actions.act_window">
            <field name="name">Reporte de proveedor</field>
            <field name="res_model">tjacdmx_report_proveedor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_report_proveedor_form" />
            <field name="target">new</field>
        </record>
        <menuitem 
		id="menu_wizard_report_proveedor"
		name="Reporte de proveedor"
		sequence="20"
		action="action_wizard_report_proveedor"
		parent="account.menu_finance_reports"
		/>
    </data>
</odoo>