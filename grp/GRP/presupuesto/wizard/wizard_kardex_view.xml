<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_kardex_wizard" model="ir.ui.view">
		<field name="name">wizard.kardex.form</field>
		<field name="model">wizard.kardex</field>
		<field name="arch" type="xml">
			<form edit="false" create="false">
        <h3>
        <div>
        <group col="4">
            <field name="fecha_inicio" string="De" />
            <field name="fecha_fin" string="a"/>
            <button name="search_kardex_xls" string="Buscar" icon="fa-search" type="action" default_focus="1" class="oe_highlight"  />
        </group>
        </div>
        </h3>
		  <div  style="display:none;" id="csv_url_div">
                <field name="csv_urls"/>
                </div>
                <a style="display:none;" class="btn btn-default"  id="csv_download2" href="#" target="_blank" download="file.xls">Descargar XLS2</a>
        <script>
            $(document).ready(function(){
                var csv_url = $("#csv_url_div").text();
                $("#csv_download").attr("href", csv_url);
                $( "#csv_download" ).click(function() {
                    var csv_url = $("#csv_url_div").text();
                    $("#csv_download2").attr("href", csv_url);
                    $("#csv_download2").attr("download", "Kardex.xls");
                    $("#csv_download2")[0].click();
                    return false;
                });
            });
        </script> 
        
            <footer>
              <div>
                <button name="search_kardex" string="Descargar PDF" icon="fa-files-o" type="object" default_focus="1" class="oe_highlight"   />
                <a class="btn btn-default" icon="fa-file" id="csv_download" style="background: #ddd;">
                    <div class="fa fa-fw fa-file-excel-o o_button_icon"></div>Excel</a>
                or
                <button string="Cancelar" class="oe_link" special="cancel" />
              </div>
            </footer>
			</form>
		</field>
	</record>
</odoo>
