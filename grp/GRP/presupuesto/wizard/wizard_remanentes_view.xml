<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_remanentes_wizard" model="ir.ui.view">
        <field name="name">remanentes.wizard.form</field>
        <field name="model">remanentes.wizard</field>
        <field name="arch" type="xml">
        <form>
        <p>Selecciona el periodo origen y su destino al cual se realizara la transacción</p>
        <h1>
        <div>
            <field name="periodo_origen" class="oe_inline"/>
            a
            <field name="periodo_destino" class="oe_inline"/>
        </div>
        </h1>
         <group col="2">
                <field name="ejercicio"/>
            </group>
            <footer>
              <div >
                <button name="search_partidas_origen" string="Guardar cambios" type="object" default_focus="1" class="oe_highlight" confirm="¿Estas seguro(a) de realizar esta operación?" />
                or
                <button string="Cancelar" class="oe_link" special="cancel" />
              </div>
            </footer>

        </form>
        </field>
    </record>

    <record id="action_wizard_remanentes" model="ir.actions.act_window">
			<field name="name">Remanentes</field>
			<field name="res_model">remanentes.wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_remanentes_wizard" />
			<field name="target">new</field>
		</record>
</odoo>
