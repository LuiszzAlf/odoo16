<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_devengados_actions_wizard" model="ir.ui.view">
        <field name="name">devengados_actions.wizard.form</field>
        <field name="model">devengados_actions.wizard</field>
        <field name="arch" type="xml">
        <form edit="false" create="false">
            <group col="4">
            <field name="momento" string="Movimiento"/>
            <field name="fecha" />
            </group>
        <footer>
        <div >
        <button name="action_devengar" string="Recibir" type="object" class="oe_highlight" attrs="{'invisible':[('momento','!=', 'devengado')]}" confirm="¿Estas seguro(a) de realizar esta operación?" />
          o
        <button string="Cancelar" class="oe_link" special="cancel" />
          </div>
          </footer>
        </form>
        </field>
    </record>
</odoo>
