<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Comentario en la Views -->
        <record id="view_tjacdmx_clc_form" model="ir.ui.view">
            <field name="name">presupuesto.clc.form</field>
            <field name="model">presupuesto.clc</field>
            <field name="arch" type="xml">
                <form string="Listado de clc">
                    <sheet string="clc">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                        </div>
                        <group col="4">
                            <field name="proveedor"/>
                            <field name="rfc"/>
                            <field name="fecha_expedicion"/>
                            <field name="banco"/>
                            <field name="no_cuenta"/>
                        </group>
                        <group col="4">
                            <field name="no_poliza"/>
                            <field name="no_clc"/>
                            <field name="clave_presu"/>
                        </group>

                    </sheet>
                    <div  class = "oe_chatter">
                        <field  name = "message_follower_ids"  widget ="mail_followers" />
                        <field  name = "message_ids"  widget = "mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="view_tjacdmx_clc_tree" model="ir.ui.view">
            <field name="name">presupuesto.clc.tree</field>
            <field name="model">presupuesto.clc</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="proveedor"/>
                    <field name="rfc"/>
                    <field name="fecha_expedicion"/>
                    <field name="banco"/>
                    <field name="no_cuenta"/>
                    <field name="no_poliza"/>
                    <field name="no_clc"/>
                    <field name="clave_presu"/>

                </tree>
            </field>
        </record>

        <act_window id="act_pres_clc" name="CLC" res_model="presupuesto.clc" src_model="presupuesto.clc"/>

        <record id="action_presupuesto_clc" model="ir.actions.act_window">
            <field name="name">CLC</field>
            <field name="res_model">presupuesto.clc</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tjacdmx_clc_tree"/>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to create a CLC.
                </p>
            </field>
        </record>

        <record id="action_presupuesto_clc_form" model="ir.actions.act_window">
            <field name="name">CLC</field>
            <field name="res_model">presupuesto.clc</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_tjacdmx_clc_form"/>

        </record>






    </data>
</odoo>
