<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ministracion_presupuestal_view_form" model="ir.ui.view">
            <field name="name">presupuesto.ministracion.form</field>
            <field name="model">presupuesto.ministracion</field>
            <field name="arch" type="xml">
                <form string="Ministraciones Presupuestales">
                    <sheet string="Ministraciones">
                        <group col="4" string="MinistraciÃ³n">
                            <field name="ejercicio"/>
                            <field name="periodo"/>
                            <field name="centro_gestor"/>
                            <field name="area_funcional_m" style="text-align:right;"/>
                            <field name="posicion_presupuestaria_m" style="text-align:right;"/>
                            <field digits="(15,2)" name="importe_autorizado" style="text-align:right;" sum="importe_autorizado"/>
                            <field digits="(15,2)" name="importe_devengado" style="text-align:right;" sum="importe_devengado"/>
                            <field digits="(15,2)" name="importe_recaudado" style="text-align:right;" sum="importe_recaudado"/>
                        </group>
                        <group col="2" string="Ampliaciones GDF">
                            <field name="ampliacion_gdf" style="text-align:right;"/>
                        </group>
                        <group col="2" string="Ampliaciones Otros Ingresos">
                            <field name="ampliacion_otros_ingresos" style="text-align:right;"/>
                        </group>
                        <group col="2" string="Reducciones">
                            <field name="reducciones" style="text-align:right;"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ministracion_presupuestal_view_tree" model="ir.ui.view">
            <field name="name">presupuesto.ministracion.tree</field>
            <field name="model">presupuesto.ministracion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ejercicio"/>
                    <field name="periodo"/>
                    <field name="centro_gestor"/>
                    <field name="area_funcional_m"/>
                    <field name="posicion_presupuestaria_m"/>
                    <field name="importe_autorizado" sum="importe_autorizado"/>
                    <field name="ampliacion" sum="ampliacion"/>
                    <field name="reducciones" sum="reducciones"/>
                    <field name="modificado" sum="modificado"/>
                    <field name="importe_devengado" sum="importe_devengado"/>
                    <field name="importe_recaudado" sum="importe_recaudado"/>
                </tree>
            </field>
        </record>
        <record id="ministracion_presupuestal_action" model="ir.actions.act_window">
            <field name="name">Ministraciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">presupuesto.ministracion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>