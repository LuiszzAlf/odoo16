<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="polizas_prsupuestales_view_form" model="ir.ui.view">
      <field name="name">polizas_presupuestales.form</field>
      <field name="model">polizas_presupuestales</field>
      <field name="arch" type="xml">
        <form create="false">
          <header>
            <button name="pdf_poliza" string="PDF" icon="fa-file" type="object"/>
          </header>
          <sheet string="requisicion">
            <group col="4">
              <field name="fecha_inicio" string="De fecha"/>
              <field name="fecha_fin" string="a"/>
              <field name="capitulo" string="Capitulo"/>
              <field name="partidas" string="Partidas" widget="many2many_tags" options="{'no_create': 'false'}" attrs="{'required': [('capitulo', '&lt;=', '')]}"/>
              <field name="clase_documento" string="Clase documento" widget="many2many_tags" options="{'no_create': 'false'}"/>
            </group>
            <group col="4">
              <field name="no_poliza" string="Poliza No."/>
              <field name="concepto" string="Concepto"/>
              <field name="elaboro" string="Elaboro"/>
              <field name="reviso" string="Reviso"/>
              <field name="vobo" string="Clase vobo"/>
              <field name="autorizo" string="Autorizo"/>
            </group>
          </sheet>
          <div  class = "oe_chatter">
            <field  name = "message_follower_ids"  widget ="mail_followers" />
            <field  name = "message_ids"  widget = "mail_thread" />
          </div>
        </form>
      </field>
    </record>

    <record id="polizas_prsupuestales_tree" model="ir.ui.view">
      <field name="name">polizas_presupuestales.tree</field>
      <field name="model">polizas_presupuestales</field>
      <field name="arch" type="xml">
        <tree edit="false" create="false">
          <field name="no_poliza" string="Poliza No."/>
          <field name="concepto" string="Concepto"/>
          <field name="elaboro" string="Elaboro"/>
          <field name="reviso" string="Reviso"/>
          <field name="vobo" string="Clase vobo"/>
          <field name="autorizo" string="Autorizo"/>
        </tree>
      </field>
    </record>

    <record id="polizas_presupuestales_action" model="ir.actions.act_window">
      <field name="name">Pólizas Presupuestales Histórico</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">polizas_presupuestales</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="domain">[]</field>
      <field name="view_id" ref="polizas_prsupuestales_tree"/>
    </record>

  </data>
</odoo>