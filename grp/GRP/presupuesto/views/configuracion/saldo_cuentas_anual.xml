<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Comentario en la Views -->
    <record id="conf_importes_anuales_view_form" model="ir.ui.view">
      <field name="name">tjacdmx.contabilidad_saldos_anuales.form</field>
      <field name="model">tjacdmx.contabilidad_saldos_anuales</field>
      <field name="arch" type="xml">
        <form string="Listado de configuraciones">
          <sheet string="Version">
            <group col="4">
                <field name="cuenta"/>
                <field name="cuenta_str"/>
                <field name="anio" string="Año"/>
                <field name="importe"/>
                <field name="id_reporte"/>
            </group>
            <group col="4">
              <field name="cargo"/>
              <field name="abono"/>
          </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="conf_flujo_view_tree" model="ir.ui.view">
      <field name="name">tjacdmx.contabilidad_saldos_anuales.tree</field>
      <field name="model">tjacdmx.contabilidad_saldos_anuales</field>
      <field name="arch" type="xml">
        <tree>
                <field name="cuenta"/>
                <field name="cuenta_str"/>
                <field name="anio" string="Año"/>
                <field name="cargo"/>
                <field name="abono"/>
                <field name="importe"/>
                <field name="id_reporte"/>
        </tree>
      </field>
    </record>
    <record id="importes_anuales_action" model="ir.actions.act_window">
      <field name="name">Importes de cuantas contables anuales</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">tjacdmx.contabilidad_saldos_anuales</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>