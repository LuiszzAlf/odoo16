<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="presupuesto_clase_documento_view_form" model="ir.ui.view">
      <field name="name">presupuesto.clase_documento.form</field>
      <field name="model">presupuesto.clase_documento</field>
      <field name="arch" type="xml">
        <form string="Listado de Clase Documento">
          <sheet>
            <group col="2" string="Clase Documento">
              <field name="nombre"/>
              <field name="tipo_documento"/>
              <field name="signo"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="presupuesto_clase_documento_view_tree" model="ir.ui.view">
      <field name="name">presupuesto.clase_documento.tree</field>
      <field name="model">presupuesto.clase_documento</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="tipo_documento"/>
          <field name="signo"/>
        </tree>
      </field>
    </record>

    <record id="presupuesto_clase_documento_action" model="ir.actions.act_window">
      <field name="name">Clase documento</field>
      <field name="res_model">presupuesto.clase_documento</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="presupuesto_clase_documento_view_tree"/>
    </record>
  </data>
</odoo>