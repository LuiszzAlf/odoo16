<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="presupuesto_area_funcional_view_form" model="ir.ui.view">
      <field name="name">presupuesto.area_funcional.form</field>
      <field name="model">presupuesto.area_funcional</field>
      <field name="arch" type="xml">
        <form string="Listado de Areas funcionales">
          <header/>
          <sheet string="Área Funcional">
            <group col="4" string="Área Funcional">
              <field name="rubro"/>
              <field name="tipo"/>
              <field name="subfuncion"/>
              <field name="concepto"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="presupuesto_area_funcional_view_tree" model="ir.ui.view">
      <field name="name">presupuesto.area_funcional.tree</field>
      <field name="model">presupuesto.area_funcional</field>
      <field name="arch" type="xml">
        <tree>
          <field name="rubro"/>
          <field name="tipo"/>
          <field name="subfuncion"/>
          <field name="concepto"/>
        </tree>
      </field>
    </record>

    <record id="presupuesto_area_funcional_action" model="ir.actions.act_window">
      <field name="name">Área funcional</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">presupuesto.area_funcional</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[]</field>
      <field name="view_id" ref="presupuesto_area_funcional_view_tree"/>
    </record>
  
  </data>
</odoo>