<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="presupuesto_presupuesto_view_search">
            <field name="name">presupuesto.control_presupuesto.search</field>
            <field name="model">presupuesto.control_presupuesto</field>
            <field name="arch" type="xml">
                <search>
                    <field name="posicion_presupuestaria"/>
                    <!-- <filter string="Año" name="filter_by_ejercicio" domain="[('ejercicio', '=', ((context_today().strftime('%Y'))))]" />
                    <filter string="Periodo" name="group_by_periodo" context="{'group_by':['periodo']}" /> -->
                </search>
            </field>
        </record>
        <record id="presupuesto_control_presupuesto_view_form" model="ir.ui.view">
            <field name="name">presupuesto.control_presupuesto.form</field>
            <field name="model">presupuesto.control_presupuesto</field>
            <field name="arch" type="xml">
                <form string="Control presupuesto" create="false">
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="version"/>
                                <field name="ejercicio"/>
                                <field name="periodo"/>
                                <!-- <field name="status_ES" string="Estado"/> -->
                            </group>
                            <group>
                                <field name="fondo_economico" string="Fondo"/>
                                <field name="posicion_presupuestaria" string="Posicion Presupuestaria"/>
                                <field name="centro_gestor" string="Centro Gestor"/>
                                <field name="area_funcional" string="Área funcional"/>
                            </group>
                        </group>
                        <group>
                            <field name="egreso_modificado_remanente" string="Egreso Remanente"/>
                            <field name="egreso_comprometido" string="Egreso Comprometido"/>
                            <field name="egreso_devengado" string="Egreso Devengado" />
                            <field name="egreso_ejercido" string="Egreso Ejercido" />
                        </group>
                        <notebook>

                            <page string="Aprobado">
                                <field name="detalle_documento_original_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Remanente">
                                <field name="detalle_documento_remanente_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Ampliaciones">
                                <field name="detalle_documento_ampliacion_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Reducciones">
                                <field name="detalle_documento_reduccion_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Comprometido">
                                <field name="detalle_documento_comprometido_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Devengado">
                                <field name="detalle_documento_devengado_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Ejercido">
                                <field name="detalle_documento_ejercido_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Pagado">
                                <field name="detalle_documento_pagado_ids">
                                    <tree>
                                        <field name="documento_id"/>
                                        <field name="importe" sum="importe"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="presupuesto_control_presupuesto_view_tree" model="ir.ui.view">
            <field name="name">presupuesto.control_presupuesto.tree</field>
            <field name="model">presupuesto.control_presupuesto</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="ejercicio"/>
                    <field name="periodo" string="Periodo"/>
                    <!-- <field name="version" string="Version"/> -->
                    <!-- <field name="fondo_economico" string="Fondo"/> -->
                    <field name="posicion_presupuestaria" string="Posición Presupuestaria"/>
                    <!-- <field name="status_ES" string="Estado"/> -->
                    <!-- <field name="area_funcional" string="Área funcional"/> -->
                    <field name="egreso_modificado_remanente" string="Egreso Remanente" sum="egreso_modificado_remanente"/>
                    <field name="egreso_aprobado" string="Egreso Aprobado" sum="egreso_aprobado"/>
                    <!-- <field name="ampliacion" string="Ampliaciones" sum="ampliacion"/>
                    <field name="reduccion" string="Reducciones" sum="reduccion"/> -->
                    <field name="egreso_modificado" string="Egreso Modificado" sum="egreso_modificado"/>
                    <field name="egreso_comprometido" string="Egreso Comprometido" sum="egreso_comprometido"/>
                    <field name="egreso_devengado" string="Egreso Devengado" sum="egreso_devengado"/>
                    <field name="egreso_ejercido" string="Egreso Ejercido" sum="egreso_ejercido"/>
                    <field name="egreso_pagado" string="Egreso Pagado" sum="egreso_pagado"/>
                    <field name="egreso_disponible" string="Egreso Disponible" sum="egreso_disponible"/>
                </tree>
            </field>
        </record>
        <record id="presupuesto_control_presupuesto_action" model="ir.actions.act_window">
            <field name="name">Control Presupuesto</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">presupuesto.control_presupuesto</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_by_ejercicio': 1, 'search_default_group_by_fecha': 1, 'search_default_group_by_nom_capitulo': 1,'group_by':['fecha', 'nom_capitulo']}</field>
            <field name="domain">[('ejercicio', '=', ((context_today().strftime('%Y'))))]</field>
            <field name="view_id" ref="presupuesto_presupuesto_view_cp_view_tree"/>
        </record>
    </data>
</odoo>