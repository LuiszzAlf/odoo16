<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="presupuesto_centro_gestor_view_form" model="ir.ui.view">
      <field name="name">presupuesto.centro_gestor.form</field>
      <field name="model">presupuesto.centro_gestor</field>
      <field name="arch" type="xml">
        <form string="Listado de centro gestor">
          <header/>
          <sheet string="Centro Gestor">
            <group col="4" string="Centro Gestor">
              <field name="clave"/>
              <field name="fecha_inicio"/>
              <field name="centro_gestor"/>
              <field name="fecha_final"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="presupuesto_centro_gestor_view_tree" model="ir.ui.view">
      <field name="name">presupuesto.centro_gestor.tree</field>
      <field name="model">presupuesto.centro_gestor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="clave"/>
          <field name="fecha_inicio"/>
          <field name="fecha_final"/>
          <field name="centro_gestor"/>
        </tree>
      </field>
    </record>

    <record id="presupuesto_centro_gestor_action" model="ir.actions.act_window">
      <field name="name">Centro Gestor</field>
      <field name="res_model">presupuesto.centro_gestor</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="presupuesto_centro_gestor_view_tree"/>
    </record>
  </data>
</odoo>