<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<!-- Comentario en la Views -->
<record id="view_tjacdmx_momentos_presupuestales_form" model="ir.ui.view">
    <field name="name">presupuesto.momentos.presupuestales.form</field>
    <field name="model">presupuesto.momentos.presupuestales</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet string="momentos">
                <group col="4">
                    <field name="momento"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_tjacdmx_momentos_tree" model="ir.ui.view">
    <field name="name">presupuesto.momentos.presupuestales.tree</field>
    <field name="model">presupuesto.momentos.presupuestales</field>
    <field name="arch" type="xml">
        <tree >
            <field name="momento"/>
        </tree>
    </field>
</record>

      
    <record id="action_presupuesto_momentos" model="ir.actions.act_window">
            <field name="name">Momentos</field>
            <field name="res_model">presupuesto.momentos.presupuestales</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tjacdmx_momentos_tree"/>
           
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
               Clic para crear momentos presupuestales.
              </p>
            </field>
        </record>

</data>
</odoo>
