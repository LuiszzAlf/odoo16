<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tjacdmx_notas_estados_form" model="ir.ui.view">
            <field name="name">tjacdmx.notas.estaods.financieros.form</field>
            <field name="model">tjacdmx.notas.estaods.financieros</field>
            <field name="arch" type="xml">
                <form string="Notas financieras">
                    <header>
                        <!-- <button name="validate_pres_devengado" type="object" string="Validar" style="background-color: #5da9dd; border-color:#5da9dd;" icon='fa-flag' class="oe_highlight" /> -->
                    </header>
                    <sheet string="notas_estados">
                        <group col="4">
                            <field name="trimestre" />
                            <field name="ejercicio" string="Año" />
                            <field name="archivo"/>
                            <field name="nota"/>
                        </group>
                    </sheet>
                    <div  class = "oe_chatter">
                        <field  name = "message_follower_ids"  widget ="mail_followers" />
                        <field  name = "message_ids"  widget = "mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="view_tjacdmx_notas_estados_tree" model="ir.ui.view">
            <field name="name">tjacdmx.notas.estaods.financieros.tree</field>
            <field name="model">tjacdmx.notas.estaods.financieros</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="trimestre"/>
                    <field name="ejercicio" string="Año"/>
                    <field name="archivo"/>
                    <field name="nota"/>
                </tree>
            </field>
        </record>
        <record id="action_presupuesto_notas_estados" model="ir.actions.act_window">
            <field name="name">Notas financieras</field>
            <field name="res_model">tjacdmx.notas.estaods.financieros</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="view_tjacdmx_notas_estados_tree"/>
        </record>
        
        <record id="notas_estados_menu" model="ir.ui.menu">
            <field name="name">Notas financieras</field>
            <field name="sequence" eval="10"/>
            <field name="parent_id" ref="menu_sub_financieros"/>
            <field name="action" ref="action_presupuesto_notas_estados"/>
        </record>



    </data>
</odoo>